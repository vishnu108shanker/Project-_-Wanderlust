<% layout("layouts/boilerplate") %>

<div class="container mt-5">

  <!-- Listing Card -->
  <div class="card shadow-lg mb-4">
    <img 
      src="<%= listing.image.url %>" 
      class="card-img-top" 
      alt="<%= listing.title %>" 
      style="height: 400px; object-fit: cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">

    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="card-title fw-bold"><%= listing.title %></h2>
        <span class="badge bg-primary fs-6">$<%= listing.price %> / night</span>
      </div>

      <p class="card-text text-muted mb-2"><i class="fa-solid fa-location-dot me-1"></i><%= listing.location %></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="text-muted"><i>Hosted by <%= listing.owner.username %></i></p>

      <!-- Owner Actions -->
      <% if(currentuser && currentuser._id.equals(listing.owner._id)) { %>
      <div class="d-flex gap-2 mt-3">
        <a href="/listings/<%= listing._id %>/update" class="btn btn-warning">Update</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Map -->
  <div id="listing-map" data-lat="<%= coords.lat %>" data-lng="<%= coords.lng %>"></div>

  <!-- Review Section -->
  <% if(currentuser && currentuser._id){ %>
  <div class="card shadow-sm mt-5 p-4">
    <h4 class="mb-3">Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
      
      <!-- Rating -->
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <select class="form-select" id="rating" name="rating" required>
          <option value="" selected disabled>Choose...</option>
          <option value="5">⭐⭐⭐⭐⭐ (5)</option>
          <option value="4">⭐⭐⭐⭐ (4)</option>
          <option value="3">⭐⭐⭐ (3)</option>
          <option value="2">⭐⭐ (2)</option>
          <option value="1">⭐ (1)</option>
        </select>
        <div class="invalid-feedback">Please provide a rating.</div>
      </div>

      <!-- Comment -->
      <div class="mb-3">
        <label for="comment" class="form-label">Your Review</label>
        <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
        <div class="invalid-feedback">Please enter a review comment.</div>
      </div>

      <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
  </div>
  <% } else { %>
  <div class="alert alert-info mt-4 text-center">
    Please <a href="/login" class="fw-bold">log in</a> to leave a review.
  </div>
  <% } %>

  <!-- Reviews List -->
  <div class="card shadow-sm mt-5 p-4">
    <h4 class="mb-3">Reviews</h4>

    <% if (listing.reviews.length === 0) { %>
      <p class="text-muted">No reviews yet. Be the first to write one!</p>
    <% } else { %>
      <ul class="list-group list-group-flush">
        <% listing.reviews.forEach(r => { %>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div>
              <h6 class="fw-bold mb-1"><%= r.author.username %></h6>
              <span class="text-warning">⭐ <%= r.rating %></span>
              <p class="mb-0"><%= r.comment %></p>
            </div>
            <% if(currentuser && currentuser._id.equals(r.author._id)) { %>
            <form action="/listings/<%= listing._id %>/reviews/<%= r._id %>?_method=DELETE" method="POST" class="ms-3">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
            <%}%>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

</div>
