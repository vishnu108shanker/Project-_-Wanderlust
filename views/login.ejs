<% layout("layouts/boilerplate") %>

<div class="container mx-auto mt-10 max-w-md bg-white shadow-lg rounded-2xl p-6">
  <h2 class="text-2xl font-bold text-center mb-6">Login</h2>

  <form action="/login" method="POST" class="space-y-4">
    <!-- Email -->
    <div>
      <label for="email" class="block text-sm font-medium">Email</label>
      <input type="email" id="email" name="email" required
        class="w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400">
    </div>

    <!-- Password -->
    <div>
      <label for="password" class="block text-sm font-medium">Password</label>
      <input type="password" id="password" name="password" required
        class="w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400">
    </div>

    <!-- Submit -->
    <div>
      <button type="submit"
        class="w-full bg-blue-500 text-black font-semibold py-2 px-4 rounded hover:bg-blue-600">
        Login
      </button>
    </div>
  </form>

  <p class="text-center text-sm text-gray-600 mt-4">
    Donâ€™t have an account? <a href="/signup" class="text-blue-500 hover:underline">Sign Up</a>
  </p>
</div>
